{{#each siteList}}
<li data-id='{{id}}' data-href='{{link}}' data-collection-id='{{collection_id}}' data-name='{{name}}'>
  <a href='#' style='padding-top: 0.3em; padding-bottom: 0.3em;'>
    <h3 style='max-width: calc(100% - 60px);'>{{name}}</h3>
    {{#if collectionName}}
      <p class='ui-li-desc no-click' > {{collectionName}} </p>
    {{/if}}
    <p class='ui-li-aside no-click' style='color:blue; top: 1.3em;'> {{date}} </p>
  </a>
</li>
{{/each}}
{{#if hasMoreSites}}
<li class="load-more" data-id="load-more-site-list" id="load-more-site">
 <a href="javascript:void(0)">{{t 'global.load_more_sites'}} ...</a>
</li>
{{/if}}
